generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  messages     Message[]
  players      Player[]
}

model Message {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  content      String
  gameId       Int
  game         Game      @relation(fields: [gameId], references: [id])
}

model Player {
  id           Int       @id @default(autoincrement())
  name         String
  gameId       Int
  game         Game      @relation(fields: [gameId], references: [id])
}